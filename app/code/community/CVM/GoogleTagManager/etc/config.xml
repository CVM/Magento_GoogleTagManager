<config>
	<modules>
		<CVM_GoogleTagManager>
			<version>1.0.0</version>
		</CVM_GoogleTagManager>
	</modules>
	<global>
		<blocks>
			<googletagmanager>
				<class>CVM_GoogleTagManager_Block</class>
			</googletagmanager>
		</blocks>
		<helpers>
			<googletagmanager>
				<class>CVM_GoogleTagManager_Helper</class>
			</googletagmanager>
		</helpers>
		<models>
			<googletagmanager>
				<class>CVM_GoogleTagManager_Model</class>
			</googletagmanager>
		</models>
	</global>
	<frontend>
		<translate>
			<modules>
				<CVM_GoogleTagManager>
					<files>
						<default>CVM_GoogleTagManager.csv</default>
					</files>
				</CVM_GoogleTagManager>
			</modules>
		</translate>
		<events>
			<checkout_onepage_controller_success_action>
				<observers>
					<googletagmanager_order_success>
						<class>googletagmanager/observer</class>
						<method>setGoogleTagManagerTransactionData</method>
					</googletagmanager_order_success>
				</observers>
			</checkout_onepage_controller_success_action>
			<checkout_multishipping_controller_success_action>
				<observers>
					<googletagmanager_order_success>
						<class>googletagmanager/observer</class>
						<method>setGoogleTagManagerTransactionData</method>
					</googletagmanager_order_success>
				</observers>
			</checkout_multishipping_controller_success_action>
		</events>
		<layout>
			<updates>
				<googletagmanager>
					<file>googletagmanager.xml</file>
				</googletagmanager>
			</updates>
		</layout>
	</frontend>
	<adminhtml>
		<translate>
			<modules>
				<CVM_GoogleTagManager>
					<files>
						<default>CVM_GoogleTagManager.csv</default>
					</files>
				</CVM_GoogleTagManager>
			</modules>
		</translate>
	</adminhtml>
	<default>
		<google>
			<googletagmanager>
				<active>0</active>
				<datalayertransactions>0</datalayertransactions>
				<datalayervisitors>0</datalayervisitors>
			</googletagmanager>
		</google>
	</default>
</config>